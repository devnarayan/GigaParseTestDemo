@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Giga Parse Test Demo</h1>
    <p><a href="https://github.com/devnarayan/GigaParseTestDemo" target="_blank" class="btn btn-primary btn-lg">Downlod from GitHub &raquo;</a></p>
</div>

<div class="row" data-ng-controller="PropertyProjectController">
    <div class="col-md-4">
        <h2><a href="/Home/Add" class="btn btn-primary">Add New</a></h2>
    </div>
    <div class="row" data-ng-init="AddProjectInit()">
        <div class="col-lg-10">
            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                <thead>
                    <tr>
                        <th data-hide="phone">ID</th>
                        <th data-class="expand"><i class="fa fa-fw fa-building-o text-muted hidden-md hidden-sm hidden-xs"></i> Porject</th>
                        <th data-class="expand"><i class="fa fa-fw fa-rotate-right text-muted hidden-md hidden-sm hidden-xs"></i> Company</th>
                        <th data-class="expand"><i class="fa fa-fw fa-building-o text-muted hidden-md hidden-sm hidden-xs"></i> Office Address</th>
                        <th data-hide="phone"><i class="fa fa-fw fa-calendar text-muted hidden-md hidden-sm hidden-xs"></i> Possession Date</th>
                        <th>Property Address</th>
                        <th data-hide="phone,tablet"><i class="fa fa-fw fa-map-marker txt-color-blue hidden-md hidden-sm hidden-xs"></i> Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-ng-repeat="pr in ProjectList">
                        <td>{{pr.ProjectID}}</td>
                        <td>{{pr.PName}}</td>
                        <td>{{pr.CompanyName}}</td>
                        <td>{{pr.OfficeAddress}}</td>
                        <td>{{pr.PossessionDateSt}}</td>
                        <td>{{pr.Address}}</td>
                        <td><a href="/Home/Edit?ProjectID={{pr.ProjectID}}">Edit</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
  
</div>
@section scripts {
<script src="~/App/controllers/ProjectCtrl.js"></script>
}